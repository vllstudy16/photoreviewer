<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pdir.screens.Screen4">
    <children>

        <fx:include fx:id="progHB" source="progressbar.fxml" />

        <Label text="Select Images that are too blurry or contain no useful information.">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>

        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="500.0" VBox.vgrow="ALWAYS">
            <content>
                <FlowPane fx:id="flowPane" alignment="CENTER" hgap="5.0" vgap="5.0" />
            </content>
        </ScrollPane>

        <fx:include fx:id="nextButton" source="nextbutton.fxml" />

    </children>

</VBox>
